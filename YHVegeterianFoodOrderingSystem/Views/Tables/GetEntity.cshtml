@model Microsoft.WindowsAzure.Storage.Table.TableResult
@{
    ViewData["Title"] = "GetEntity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Get Entity</h1>

@if (ViewBag.msg != null)
{
    <script>alert("@ViewBag.msg");</script>
}
else
{
    <table border="1">
        <tr>
            <th>Family Name</th>
            <th>Given Name</th>
            <th>Email</th>
            <th>BirthDate</th>
            <th>Registration Date</th>
            <th>Delete Action</th>
        </tr>
        <tr>
            @{var displayresult = Model.Result as YHVegeterianFoodOrderingSystem.Models.CustomerEntity;}
            <td>@displayresult.RowKey</td>
            <td>@displayresult.PartitionKey</td>
            <td>@displayresult.Email</td>
            <td>@displayresult.BirthDate</td>
            <td>@displayresult.Timestamp</td>
            <td>
                <a asp-route-PartitionKey="@displayresult.PartitionKey" asproute-RowKey="@displayresult.RowKey" asp-controller="Tables" asp-action="DeleteEntity">
                    <button>Delete</button>
                </a>
            </td>
            }
    </table>
}